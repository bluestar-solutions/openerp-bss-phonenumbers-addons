<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="view_bss_partner_phonenumbers_config_form" model="ir.ui.view">
			<field name="name">bss.partner.phonenumbers.config.form</field>
			<field name="model">bss.partner.phonenumbers.config</field>
			<field name="arch" type="xml">
	            <form string="Migrate Partner Phone Numbers" version="7.0">
	                <group>
	                	<group colspan="4" col="1">
		                	<p>
			                	<label string="The module 'Partner Phone Number' need valid and well-formed phone numbers for
			                					partners. We will try now to convert phone numbers on existing partners. The numbers
			                					we cannot convert will be blanked. You can download a CSV file with all the numbers
			                					we cannot convert at the end of the process." />
		                	</p>
		                	<p>
			                	<label string="You have to specify a default country for helping us to convert numbers without country code." />
		                	</p>
	                	</group>
	                    <field name="country_id" />
	                </group>
	                <footer>
	                    <button name="execute" string="Apply" type="object" class="oe_highlight"/>
	                    or
	                    <button string="Cancel" class="oe_link" special="cancel"/>
	                </footer>
	            </form>
			</field>
		</record>

 		<record id="view_bss_partner_phonenumbers_config_failed_form" model="ir.ui.view">
			<field name="name">bss.partner.phonenumbers.config.failed.form</field>
			<field name="model">bss.partner.phonenumbers.config</field>
			<field name="arch" type="xml">
	            <form string="Migrate Partner Phone Numbers" version="7.0">
	            	<field name="success" invisible="1" />
	                <group attrs="{'invisible': [('success', '=', True)]}">
	                	<label string="Following numbers failed to be converted and have been blanked :" colspan="4"/>
	                    <field name="failed_ids" nolabel="1" colspan="4">
	                    	<tree string="Failed Conversion">
	                    		<field name="partner_id" />
	                    		<field name="phone" />
	                    		<field name="mobile" />
	                    		<field name="fax" />
	                    	</tree>
	                    </field>
	                    <field name="output_file_stream" filename="output_file_name" nolabel="1" colspan="4" />
	                </group>
	                <group attrs="{'invisible': [('success', '=', False)]}">
	                    <group colspan="4" col="1">
		                	<p>
			                	<label string="Every partner numbers successfully converted." />
		                	</p>
	                	</group>
	                </group>
	                <footer>
	                    <button string="Close" special="cancel" class="oe_highlight"/>
	                </footer>
	            </form>
			</field>
		</record>

		<record id="action_bss_partner_phonenumbers_config" model="ir.actions.act_window">
			<field name="name">Migrate Partner Phone Numbers</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">bss.partner.phonenumbers.config</field>
			<field name="view_type">form</field>
			<field name="view_id" ref="view_bss_partner_phonenumbers_config_form" />
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
		
		<record id="bss_partner_phonenumbers_config_todo" model="ir.actions.todo">
            <field name="action_id" ref="action_bss_partner_phonenumbers_config"/>
            <field name="sequence">200</field>
            <field name="type">automatic</field>
        </record>

	</data>
</openerp>
